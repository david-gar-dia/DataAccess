<Window x:Name="wnd_mergeEntry" x:Class="MainForm.MergeEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainForm"
        mc:Ignorable="d"
        Title="Merge Entry" Height="202" Width="341">
    <Grid x:Name="grd_mergeEntry">
        <Label x:Name="file1_lbl_mergeEntry" Content="File 1:" HorizontalAlignment="Left" Margin="34,31,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="file1_txtbox_mergeEntry" HorizontalAlignment="Left" Margin="79,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="18"/>
        <Button x:Name="accept_btn_mergeEntry" Content="Accept" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Height="19" Width="48" Click="accept_btn_mergeEntry_Click" />
        <Button x:Name="cancel_btn_mergeEntry" Content="Cancel" HorizontalAlignment="Left" Margin="207,130,0,0" VerticalAlignment="Top" Height="19" Width="48" Click="cancel_btn_mergeEntry_Click" />
        <Label x:Name="file2_lbl_mergeEntry" Content="File 2:" HorizontalAlignment="Left" Margin="34,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="file2_txtbox_mergeEntry" HorizontalAlignment="Left" Margin="79,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="18"/>
        <Button x:Name="file1Select_btn_mergeEntry" Content="File..." HorizontalAlignment="Left" Margin="246,34,0,0" VerticalAlignment="Top" Width="43" Click="file1Select_btn_mergeEntry_Click"/>
        <Button x:Name="file2Select_btn_mergeEntry" Content="File..." HorizontalAlignment="Left" Margin="246,58,0,0" VerticalAlignment="Top" Width="43" Click="file2Select_btn_mergeEntry_Click"/>
        <Label x:Name="outputFile_lbl_mergeEntry" Content="Output:" HorizontalAlignment="Left" Margin="34,85,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="outputFile_txtbox_mergeEntry" HorizontalAlignment="Left" Margin="85,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Height="18"/>
        <Button x:Name="outputFile_btn_mergeEntry" Content="File..." HorizontalAlignment="Left" Margin="246,88,0,0" VerticalAlignment="Top" Width="43" Click="outputFile_btn_mergeEntry_Click"/>

    </Grid>
</Window>

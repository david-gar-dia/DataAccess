<Window x:Name="wnd_bulkTitleEntry" x:Class="MainForm.BulkTitleEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainForm"
        mc:Ignorable="d"
        Title="BulkTitleEntry" Height="220" Width="341">
    <Grid x:Name="grd_bulkTitleEntry">
        <Label x:Name="startingPos_lbl_bulkTitleEntry" Content="Enter the starting position:" HorizontalAlignment="Left" Margin="50,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="startingPos_txtbox_bulkTitleEntry" HorizontalAlignment="Left" Margin="50,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="accept_btn_bulkTitleEntry" Content="Accept" HorizontalAlignment="Left" Margin="141,122,0,0" VerticalAlignment="Top" Height="19" Width="48" Click="accept_btn_bulkTitleEntry_Click"/>
        <Button x:Name="cancel_btn_bulkTitleEntry" Content="Cancel" HorizontalAlignment="Left" Margin="210,123,0,0" VerticalAlignment="Top" Height="19" Width="48" Click="cancel_btn_bulkTitleEntry_Click"/>
        <Label x:Name="size_lbl_bulkTitleEntry" Content="Enter the size of the bulk:" HorizontalAlignment="Left" Margin="50,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="size_txtbox_bulkTitleEntry" HorizontalAlignment="Left" Margin="50,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
